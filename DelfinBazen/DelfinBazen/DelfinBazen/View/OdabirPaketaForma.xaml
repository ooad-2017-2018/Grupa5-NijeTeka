            <RadioButton Content="Tai masaža (Cijena paketa 60KM)" HorizontalAlignment="Left" Margin="60,375,0,0" VerticalAlignment="Top" FontSize="18"/>
            <RadioButton Content="Aromaterapijska masaža (Cijena paketa 50KM)" HorizontalAlignment="Left" Margin="60,407,0,-32" VerticalAlignment="Top" FontSize="18"/>
            <RadioButton Content="Sportska masaža (Cijena paketa 40KM)" HorizontalAlignment="Left" Margin="60,338,0,0" VerticalAlignment="Top" FontSize="18"/>
            <CheckBox Content="Papuče 2KM" HorizontalAlignment="Left" Margin="612,142,0,0" VerticalAlignment="Top" FontSize="20" FontStyle="Italic"/>
            <CheckBox Content="Peškir 3KM" HorizontalAlignment="Left" Margin="612,199,0,0" VerticalAlignment="Top" FontSize="20" FontStyle="Italic"/>
            <CheckBox Content="Ormarić 5KM" HorizontalAlignment="Left" Margin="612,256,0,0" VerticalAlignment="Top" FontSize="20" FontStyle="Italic"/>
            <TextBlock HorizontalAlignment="Left" Margin="602,95,0,0" Text="Želim iznajmiti: " TextWrapping="Wrap" VerticalAlignment="Top" Height="56" Width="152" FontSize="20" FontStyle="Italic"/>
            <TextBlock HorizontalAlignment="Left" Margin="818,90,0,0" Text="Vrsta karte: " TextWrapping="Wrap" VerticalAlignment="Top" Height="56" Width="174" FontSize="20" FontStyle="Italic"/>
            <RadioButton Content="Jutarnja (8:00 - 12:00)" HorizontalAlignment="Left" Margin="818,142,0,0" VerticalAlignment="Top" FontSize="18"/>
            <RadioButton Content="Dnevna (12:00 - 18:00)" HorizontalAlignment="Left" Margin="818,179,0,0" VerticalAlignment="Top" FontSize="18"/>
            <RadioButton Content="Noćna (18:00 - 22:00)" HorizontalAlignment="Left" Margin="818,216,0,0" VerticalAlignment="Top" FontSize="18"/>
            <TextBlock HorizontalAlignment="Left" Margin="602,342,0,0" Text="Odaberite željeni termin: " TextWrapping="Wrap" VerticalAlignment="Top" Height="61" Width="250" FontSize="20" FontStyle="Italic"/>
            <DatePicker HorizontalAlignment="Left" Margin="602,386,0,0" VerticalAlignment="Top" FontSize="18"/>
            <Button Content="Rezerviši i plati" HorizontalAlignment="Left" Margin="704,482,0,0" VerticalAlignment="Top" FontSize="20"/>
        </Grid>

    </Grid>
</Page>
