            <RadioButton Content="Paket1 (Korištenje bazena)- Cijena 10KM" HorizontalAlignment="Left" Margin="14,140,0,0" VerticalAlignment="Top" Height="52" Width="414" FontSize="20" FontStyle="Italic"/>
            <RadioButton Content="Paket2 (Korištenje bazena i spa centra)- Cijena 20KM" HorizontalAlignment="Left" Margin="14,197,0,0" VerticalAlignment="Top" Height="52" Width="494" FontSize="20" FontStyle="Italic"/>
