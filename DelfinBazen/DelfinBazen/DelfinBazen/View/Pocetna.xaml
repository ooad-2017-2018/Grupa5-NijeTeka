            <Button Content="Prijavite se i odaberite dodatne mogućnosti!" HorizontalAlignment="Left" Margin="148,436,0,0" VerticalAlignment="Top" Height="64" Width="461" Background="White" FontSize="20" Click="Button_Click_3"/>
            <Button Content="Registrujte se (timska prijava)!" HorizontalAlignment="Left" Margin="148,343,0,0" VerticalAlignment="Top" Height="64" Width="461" Background="White" FontSize="20" Click="Button_Click_2"/>
        </Grid>

    </Grid>
</Page>
